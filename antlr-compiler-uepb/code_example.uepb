spawn num : int = toInt(ask());
spawn potencia : int = toInt(ask());
spawn resultado : int;

unless(potencia == 0){
    resultado = 1;
}do{
    resultado = num;
    spawn aux : int = 1;
    during(aux < potencia){
        resultado = resultado * num;
        aux = aux + 1;
    };
};

show("O resultado Ã© ");
show(resultado);